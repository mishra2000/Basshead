<div class="wrapper">
  <div class="form-signin shadow-lg p-3 mb-5 bg-white rounded" style="height: 400px;">
    <h2 style="text-align:center">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autofocus: true ,class:"form-control",style:"margin-bottom:20px",placeholder:"enter email"%>


    <%= f.password_field :password ,class:"form-control",style:"margin-bottom:20px",placeholder:"enter password (minimum 6 chars)"%>
    <%= f.password_field :password_confirmation ,class:"form-control",style:"margin-bottom:20px",placeholder:"confirm password"%>

    <%# <% if devise_mapping.rememberable? %>
      <!-- <div class="field"> -->
        <%# <%= f.check_box :remember_me %>
        <%# <%= f.label :remember_me %>
      <!-- </div> -->
    <%# <% end %>

    <%= f.submit "Sign Up" ,class:"field btn btn-success",style:"width:100%;margin-top:10px"%>
    <%= link_to "forgot Password?",new_user_password_path ,class:"field btn btn-dark",style:"width:58%;margin-top:10px;float:left"%>
    <%= link_to "Log in?",new_user_session_path ,class:"field btn btn-info",style:"width:38%;margin-top:10px;float:right"%>
    <%end%>
  </div>
</div>
