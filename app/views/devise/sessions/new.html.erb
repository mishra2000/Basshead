<div class="wrapper">
  <div class="form-signin shadow-lg p-3 mb-5 bg-white rounded" style="height: 350px;" >
    <h2 style="text-align:center">login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",style:"margin-bottom:20px",placeholder:"enter registered email"%>
    <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control",style:"margin-bottom:20px",placeholder:"enter password"%>
    <%# <% if devise_mapping.rememberable? %> 
      <!-- <div class="field"> -->
        <%# <%= f.check_box :remember_me %>
        <%# <%= f.label :remember_me %>
      <!-- </div> -->
    <%# <% end %>

    <%= f.submit "Log in" ,class:"field btn btn-success",style:"width:100%;margin-top:10px"%>
    <%= link_to "forgot Password?",new_user_password_path ,class:"field btn btn-dark",style:"width:58%;margin-top:10px;float:left"%>
    <%= link_to "Sign up?",new_user_registration_path ,class:"field btn btn-info",style:"width:38%;margin-top:10px;float:right"%>
    <%end%>
  </div>
</div>
